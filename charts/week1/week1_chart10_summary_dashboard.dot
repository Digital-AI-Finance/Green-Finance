digraph Week1Summary {
    // Template-aligned styling
    rankdir=TB;
    node [shape=box, style="rounded,filled", fontname="Arial", fontsize=11];
    edge [fontname="Arial", fontsize=9];

    // Color scheme matching beamer theme
    node [fillcolor="#D6D6EF"];

    // Summary nodes
    market [label="USD 2.1T Market\n15% CAGR", fillcolor="#C1C1E8", fontsize=12];

    instruments [label="5 Major Instruments\nGreen Bonds: USD 1.6T\nSL Bonds: USD 500B\nGreen Loans: USD 300B", fillcolor="#CCCCEB"];
    participants [label="4 Participant Types\nProviders | Intermediaries\nRecipients | Standards", fillcolor="#CCCCEB"];
    standards [label="Global Standards\nICMA | CBI | EU Taxonomy\nISSB | NGFS", fillcolor="#CCCCEB"];

    performance [label="Competitive Returns\nGreenium: 0-5 bps\nRisk-Adjusted Performance", fillcolor="#D6D6EF"];

    // Flow
    market -> instruments [style="solid", penwidth=2];
    market -> participants [style="solid", penwidth=2];
    market -> standards [style="solid", penwidth=2];
    instruments -> performance [style="solid"];

    // Title
    labelloc="t";
    label="Green Finance Foundations - Week 1 Summary";
    fontsize=14;
    fontname="Arial Bold";
    fontcolor="#3333B2";
}
